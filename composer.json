{
    "name": "lensmedia/symfony-sepa",
    "description": "Direct Debit to XML batch bundle",
    "type": "symfony-bundle",
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-iconv": "*",
        "brick/money": "^0.8.1",
        "digitick/sepa-xml": "^2.2",
        "jschaedl/iban-validation": "^2.1",
        "symfony/filesystem": "^6.3",
        "symfony/framework-bundle": "^6.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.39",
        "friendsofphp/php-cs-fixer": "^3.37"
    },
    "autoload": {
        "psr-4": {
            "Lens\\Bundle\\LensSepaBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "fix": "php vendor/bin/php-cs-fixer fix src"
    }
}
